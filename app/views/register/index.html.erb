

<section class="wrapper-input-section">
  <div class="login">


    <h1 class="text-center">Cadastrar</h1>
                 <% if notice %>
    <p class="text-center" style="color:tomato"><%= notice %></p>
    <% end %>
    <%= form_with url: register_validate_account_path, method: :post do |form| %>
    <div class="form-group">
        <%= form.label :name, "Nome:", class:"form-label" %>
        <%= form.text_field :name , class:"form-control" ,  :required => true%>
    </div>
    <div class="form-group">
        <%= form.label :email, "Email:" , class:"form-label"%>
        <%= form.email_field :email, class:"form-control" ,  :required => true %>
    </div>
    <div class="form-group">
        <%= form.label :password, "Password:" , class:"form-label"%>
        <%= form.password_field :password, class:"form-control",  :required => true %>
    </div>



        <%= form.submit "Cadastrar", class:"btn btn-success w-100" %>
      <% end %>
      <p class="text-center mt-4">Voltar para pÃ¡gina de <%= link_to "login", login_index_path %></p>
  </div>
  
</section>


